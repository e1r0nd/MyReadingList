{
  "name": "myreadinglist",
  "version": "0.1.0",
  "private": true,
  "now": {
    "alias": "myreadinglist"
  },
  "dependencies": {
    "codacy-coverage": "^2.1.0",
    "firebase": "^4.10.0",
    "idb-keyval": "^2.3.0",
    "re-base": "3.2.2",
    "react": "^16.3.0-alpha.1",
    "react-dom": "^16.3.0-alpha.1",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.1"
  },
  "devDependencies": {
    "csscomb": "^4.2.0",
    "serve": "^6.5.3",
    "prop-types": "^15.6.1",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1",
    "eslint-plugin-babel": "^4.1.2"
  },
  "scripts": {
    "dev": "npm-run-all -p watch-css start-js",
    "start": "serve --single ./build",
    "precommit": "lint-staged",
    "build-css":
      "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css":
      "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "predeploy": "npm run build",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts test --env=jsdom",
    "codacy-coverage": "cat ./coverage/lcov.info | codacy-coverage",
    "eject": "react-scripts eject",
    "csscomb-all": "csscomb src/ --tty-mode"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,scss}": ["csscomb --tty-mode", "prettier --write"]
  }
}
